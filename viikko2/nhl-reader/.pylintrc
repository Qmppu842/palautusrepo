[MASTER]

ignore-paths=src/tests
ignore=main.yml
disable= C0114,C0115,C0116

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring,
        unrecognized-option,
        missing-function-docstring,
        too-few-public-methods

[FORMAT]
max-line-length=150
indent-after-paren=4

[REFACTORING]
max-nested-blocks=2

[DESIGN]
max-args=4
max-statements=10
max-complexity= 6

[BASIC]
